{
  "name": "{{PKG_NAME}}",
  "version": "0.0.0",
  "description": "{{DESCRIPTION}}",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "@types/",
  "files": [
    "dist/",
    "@types/"
  ],
  "contributors": [
    "{{CONTRIBUTOR}}"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/{{GITHUB_REPO}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{GITHUB_REPO}}/issues"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "npm run transform:dev & tsc -w",
    "clean": "rimraf dist && rimraf @types",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "npm run lint --prefix ../",
    "lint:lit-analyzer": "lit-analyzer",
    "serve": "wds",
    "test": "wtr \"src/**/*.test.ts\" --coverage",
    "test:watch": "wtr \"src/**/*.test.ts\" --watch",
    "transform": "wcom transform \"src/**/*.component.ts\"",
    "transform:dev": "npm run transform -- -t types exports -w",
    "transform:prod": "npm run transform -- -t types exports vscode markdown react angular svelte vue vue-next"
  },
  "dependencies": {
    "@wcom/events": "^1.0.0",
    "lit-element": "^2.0.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.32",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.8",
    "@web/dev-server": "^0.0.19",
    "@web/dev-server-esbuild": "^0.2.6",
    "@web/test-runner": "^0.9.7",
    "@wcom/cli": "^1.0.0",
    "lit-analyzer": "^1.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "typescript": "^4.0.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "{{KEYWORDS}}"
  ]
}
